page{ background: #f5f5f5;}
.clear{ clear: both;}
/*nav*/
.nav{ width: 100%; height: 90rpx; border-bottom: 2rpx solid #dedede;}
.nav_con{ width: 50%; height: 88rpx; line-height: 88rpx; text-align: center; font-size: 30rpx; color: #333; float: left; background: #fff;}
.nav_active{ border-bottom: 2rpx solid #019ff0; color: #019ff0;}
/*nav end*/

/*登录*/
.login_con{ padding-left: 30rpx; height: 88rpx; background: #fff; border-top: 2rpx solid #dedede; overflow: hidden;}
.login_con:first-child{ border-top: 0;}
.login_left{ display: block; width: 20%; line-height: 88rpx; font-size: 30rpx; color: #333; float: left;}
.login_right{ display: block; width: 80%; float: left; position: relative;}
.login_text{ width: 80%; height: 60rpx; line-height: 60rpx; border: 0; border-radius: 0; background: #fff; font-size: 30rpx; color: #333; margin: 14rpx 0;}
.login_btn{ width: 160rpx; height: 60rpx; line-height: 60rpx; text-align: center; font-size: 28rpx; color: #019ff0; border: 2rpx solid #019ff0; border-radius: 10rpx; position: absolute; top: 14rpx; right: 10rpx;}

.login_main{ background: #f5f5f5; padding-left: 30rpx; font-size: 24rpx; line-height: 70rpx; padding-bottom: 20rpx;}
/*登录 end*/

/*按钮*/
.hotel_input{ padding: 60rpx 20rpx 40rpx;}
.cencel_btn{ width: 100%; height: 70rpx; line-height: 70rpx; text-align: center; font-size: 30rpx; color: #fff; font-family: "microsoft yahei",arial; border: 0; border-radius: 10rpx; background: #ffb031;}
/*按钮 end*/

/*footer*/
.footer{ width: 100%; height: 88rpx; position: fixed; left: 0; bottom: 0; right: 0; z-index: 200;}
.footer_con{ width: 50%; height: 88rpx; line-height: 88rpx; text-align: center; font-size: 32rpx; color: #333; float: left;}
/*footer end*/