page{ background: #f5f5f5;}
/*input  mobile*/
.div_box{padding-bottom:20px;}
.div_box p{  color:#666; font-size:15px; padding:12px 15px 5px;}
.div_box .input_text{border-top:1px solid #e0e0e0;border-bottom:1px solid #e0e0e0; background:#fff;  height:44px;display:block;padding:0 30px 0 15px;}
.div_box .input_text input{ font-size:15px;padding:0;background-color:transparent; width:100%;height:44px; /*line-height:44px;*/color:#666;}
/*code*/
.div_box .input_text.code{padding:0 100px 0 15px;position:relative;}
.div_box .input_text.code .time{position:absolute;top:0px;right:0px;height:44px;width:69px;border-left:1px solid #E0E0E0;font-size:16px;text-align:center;line-height:44px;color:#999;}
.div_box .input_text.code .time em{font-size:22px;color:#29B7E6;}
.div_box .input_text.code dfn.clearBtn{right:76px;}
/*pwd*/
.div_box .input_text.pwd{margin-top:39px;}
.btn_check{display:block;margin-top:8px;font-size:14px;color:#ADADAD;padding-left:35px;position:relative;line-height:20px;}
.btn_check:before{width:15px;height:15px;border:1px solid #E2E2E2;background-color:#fff;position:absolute;content:"";left:15px;top:1px;}
.btn_check.on{position:relative;}
.btn_check.on:before{border:1px solid #29B7E6;border-radius:3px;}
.btn_check.on:after{position:absolute;content:"";left:20px;top:8px; border-left:1px solid #29B7E6;width:0px;height:5px; transform: rotate(-45deg); -ms-transform: rotate(-45deg); -moz-transform: rotate(-45deg); -webkit-transform: rotate(-45deg); -o-transform: rotate(-45deg);}
.btn_check.on span:before{position:absolute;content:"";left:25px;top:5px; border-left:1px solid #29B7E6;width:0px;height:10px; transform: rotate(45deg); -ms-transform: rotate(45deg); -moz-transform: rotate(45deg); -webkit-transform: rotate(45deg); -o-transform: rotate(45deg);}

/*按钮*/
.btn { margin:55px 10px 0; display:block;}
.btn button{ background:#92d3e8;  color:#fff; font-size:16px; width:100%; line-height:44px; border-radius:5px; letter-spacing:2px; }

