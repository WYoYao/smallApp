page{ background: #f5f5f5;}
.clear{ clear: both;}
/*hotel*/
.hotel{ padding: 20rpx; background: #fff;}
.hotel text{ display: block;}
.hotel_name{ font-size: 32rpx; color: #333;}
.hotel_f{ font-size: 24rpx; color: #333; padding-top: 20rpx;}
.hotel_time{ font-size: 24rpx; color: #999; padding-top: 20rpx;}
/*hotel*/

/*AddCard*/
.AddCard{ width: 100%; background: #FFFFFF; border-bottom: 2rpx solid #CCCCCC; margin: 20rpx 0 100rpx; overflow: hidden;}
.AddCard_title{ width: 100%; height: 88rpx; border-bottom: 2rpx solid #CCCCCC; overflow: hidden;}
.Credit{ width: 55rpx; height: 55rpx; float: left; margin: 16rpx 20rpx;}
.Credit_img{ width: 55rpx; height: 55rpx;}
.title_text{ float: left; font-size: 32rpx; color: #666; line-height: 88rpx;}

.AddCard_con{ margin-left: 20rpx;}
.AddCard_section{ width: 100%; height: 88rpx; border-bottom: 2rpx solid #CCCCCC; overflow: hidden;}
.AddCard_section:last-child{ border-bottom: 0;}
.icon_jt{ position: relative;}
.icon_jt::before{ content: ""; position: absolute; top: 50%; right: 30rpx; margin-top: -7rpx; width: 14rpx; height: 14rpx; border-top: 2rpx solid #ccc; border-right: 2rpx solid #ccc; transform: rotate(45deg); -webkit-transform: rotate(45deg); -moz-transform: rotate(45deg); -o-transform: rotate(45deg);}
.section_text{ font-size: 28rpx; color: #666; line-height: 88rpx; margin-left: 80rpx;}
.cardinput{ height: 60rpx; line-height: 60rpx; font-size: 28rpx; color: #333; margin: 14rpx 20rpx 14rpx 80rpx;}
.cardinput::-webkit-input-placeholder{ font-size: 28rpx; color: #999; font-family: "microsoft yahei";}
.card_input{ margin-left: 80rpx;}
.card_date{height: 60rpx; line-height: 60rpx; font-size: 28rpx; color: #333;margin: 14rpx 0;}
.card_view{float: left;width: 50%;}
/*AddCard end*/

/*footer*/
.footer{ width: 100%; height: 88rpx; background: #fff; border-top: 2rpx solid #ccc; position: fixed; left: 0; right: 0; bottom: 0; z-index: 100;}
.footer_left{ width: 60%; height: 88rpx; line-height: 88rpx; float: left;}
.footer_price{ float: left; margin-left: 16rpx;}
.price_a{ font-size: 32rpx; color: #333;}
.price_b{ font-size: 24rpx; color: #ff8420; margin-left: 10rpx;}
.price_c{ font-size: 30rpx; color: #ff8420;}
.footer_show,.footer_hide{ float: right; font-size: 24rpx; color: #666; margin-right: 16rpx; padding-right:30rpx; position: relative;}
.footer_show::before,.footer_hide::before{ content: ""; position: absolute; top: 50%; right: 0rpx; width: 14rpx; height: 14rpx; transform: rotate(45deg); -webkit-transform: rotate(45deg); -moz-transform: rotate(45deg); -o-transform: rotate(45deg);}
.footer_show::before{ margin-top: -5rpx; border-top: 2rpx solid #ccc; border-left: 2rpx solid #ccc;}
.footer_hide::before{ margin-top: -14rpx; border-bottom: 2rpx solid #ccc; border-right: 2rpx solid #ccc;}
.footer_right{ width: 40%; height: 88rpx; line-height: 88rpx; text-align: center; font-size: 30rpx; color: #fff; background: #ff8522; float: left;}
/*footer end*/

/*明细弹层*/
.layer_bg{ width: 100%; height: 100%; background: #000; opacity: 0.6; position: fixed; top: 0; right: 0; bottom: 0; left: 0; z-index: 99;}
.layer_con{ width: 100%; background: #fff; position: fixed; right: 0; bottom: 90rpx; left: 0; z-index: 100;}
.layer_details{ height: 88rpx; line-height: 88rpx; padding: 0 20rpx;}
.details_left{ float: left;}
.details_f{ font-size: 32rpx; color: #333;}
.details_p{ font-size: 30rpx; color: #ff8420;}
.details_right{ float: right;}
.details_t{ font-size: 32rpx; color: #666;}
.details_m{ margin-left: 30rpx;}
.details_s{ font-size: 30rpx; color: #666;}
/*明细弹层 end*/

/*银行卡列表*/
.card_bg{ width: 100%; height: 100%; background: #fff; position: fixed; top: 0; right: 0; bottom: 0; left: 0; z-index: 200;}
.card_con{ width: 100%; background: #fff; position: fixed; top: 0; right: 0; bottom: 0; left: 0; z-index: 201;}
.card_list{ height: 88rpx; position: relative;}
.card_left{ width: 160rpx; height: 88rpx; position: absolute; top: 0; left: 0; bottom: 0;}
.card_img{ width: 160rpx; height: 44rpx; margin: 22rpx;}
.card_right{ margin-left: 182rpx; height: 88rpx; border-bottom: 2rpx solid #ccc;}
.card_right text{ display: block;}
.card_name{ font-size: 32rpx; color: #333; padding-top: 8rpx;}
.card_credit{ font-size: 24rpx; color: #999;}
/*银行卡列表 end*/

/*选择证件*/
.Certificates{ margin-left: 30rpx; height: 88rpx; line-height: 88rpx; font-size: 30rpx; color: #333; padding-left: 20rpx; border-bottom: 2rpx solid #ccc; position: relative;}
.Cer_active::before{ content: ""; position: absolute; top: 50%; right: 30rpx; margin-top: -3rpx; width: 20rpx; height: 6rpx; border-left: 4rpx solid #26b7e6; border-bottom: 4rpx solid #26b7e6; transform: rotate(-45deg); -webkit-transform: rotate(-45deg); -moz-transform: rotate(-45deg); -o-transform: rotate(-45deg);}
/*选择证件*/
