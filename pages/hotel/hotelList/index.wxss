.clear{
    clear: both;
}
/*搜索框*/
.seach{
    width: 100%;
    height: 60rpx;
    background: #f5f5f5;
    padding: 14rpx 0; 
    border-bottom: 2rpx solid #dedede;
    position: fixed;
    left: 0;
    top: 0;
    right: 0;
    z-index: 100;
}
.seach_input{
    margin: 0 20rpx;
    height: 60rpx;
    border-radius: 10rpx;
    position: relative;
}
.start_date,.end_date{
    width: 18%;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 20rpx;
    color: #049ff0;
    text-align: center;
    overflow: hidden;
    background: #fff;
    border-radius: 8rpx;
    float: left;
    margin-right: 2%;
}
.start_date picker,.end_date picker{
    padding-left: 25rpx;
}
.start_date{
    padding-top: 4rpx;
}
.seach_right{
    width: 60%;
    border-radius: 8rpx;
    float: left;
    background:#fff url(https://webapi.jsjinfo.cn/smallApp/viphall/search_copy.png) no-repeat 20rpx;
    background-size: 28rpx 27rpx;
}
.cityinput{
    width: 1000%;
    height: 60rpx;
    line-height: 60rpx;
    margin-left: 58rpx;
    font-size: 24rpx;
    color: #333;
}
.cityinput::-webkit-input-placeholder{
    font-size: 24rpx;
    color: #999;
    font-family: "microsoft yahei",arial;
}
/*搜索框 end*/

/*main*/
.main{
    width: 100%;
    /*overflow: hidden;*/
    margin: 88rpx 0 98rpx;
}
.hotel_list{
    width: 100%;
    display: block;
    float: left;
    border-bottom: 2rpx solid #dedede;
    background: #fff;
    padding: 20rpx 0;
    position: relative;
}
.hotel_dt{
    width: 178rpx;
    height: 178rpx;
    position: absolute;
    top: 20rpx;
    left: 10rpx;
}
.hotel_img{
    width: 178rpx;
    height: 178rpx;
    border-radius: 10rpx;
}
.hotel_dd{
    min-height:178rpx; 
    margin: 0 10rpx 0 208rpx;
    position: relative;
}
.hotel_title{
    font-size: 30rpx;
    color: #333333;
    display: -webkit-box;
    overflow: hidden; 
    text-overflow:ellipsis; 
    word-break:break-all; 
    -webkit-box-orient:vertical; 
    -webkit-line-clamp:1;
}
.hotel_home{
    font-size: 24rpx;
    color: #666;
    line-height: 1.2;
}
.hotel_icon{
    height: 24rpx;
    margin-top:-14rpx;
    margin-bottom:10rpx;
}
.icon_wifi{
    width: 26rpx;
    height: 23rpx;
    margin-right: 30rpx;
}
.icon_p{
    width: 14rpx;
    height: 22rpx;
}
.hotel_range{
    font-size: 24rpx;
    color: #999;
    line-height: 1.2;
    display: -webkit-box;
    overflow: hidden; 
    text-overflow:ellipsis; 
    word-break:break-all; 
    -webkit-box-orient:vertical; 
    -webkit-line-clamp:1;
    
}
.hotel_ticket text{
    font-size: 20rpx;
    color: #ff8522;
    border: 2rpx solid #ff8522;
    border-radius: 6rpx;
    padding: 4rpx 6rpx;
    margin-right: 20rpx;
}
.hotel_price{
    position: absolute;
    right: 0;
    bottom: 0;
}
.price_text{
    font-size: 40rpx;
    color: #ff8522;
    font-weight: 700;
    font-family: "microsoft yahei",arial;
}
.price_em{
    font-size: 24rpx;
    color: #ff8522;
}
.price_span{
    font-size: 26rpx;
    color: #999999;
}
.price_texts{
    font-size: 28rpx;
    color: #ff8522;
    font-weight: 700;
    font-family: "microsoft yahei",arial;
}
/*main end*/

/*footer*/
.footer{
    width: 100%;
    height: 98rpx;
    background: rgba(0, 0, 0, .6);
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 100;
}
.footer_dl{
    width: 100%;
}
.footer_dt{
    width: 100%;
    text-align: center;
    padding-top: 14rpx;
}
.footer_img{
    width: 30rpx;
    height: 37rpx;
}
.footer_dd{
    width: 100%;
    text-align: center;
    font-size: 24rpx;
    color: #fff;
}
/*footer end*/

/*排序*/
.sorting_bg{
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, .6);
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 200;
}
.sorting_con{
    width: 100%;
    background: #fff;
    position: fixed;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 201;
}
.sorting_ul{
    margin-left: 75rpx;
}
.sorting_li{
    height: 90rpx;
    line-height: 90rpx;
    border-bottom: 2rpx solid #dedede;
}
.sorting_li text{
    font-size: 28rpx;
    color: #484e4f;
}
.sorting_active{
    background: url(../../../https://webapi.jsjinfo.cn/smallApp/hotel/hotel/icon_xz.png) no-repeat 95%;
    background-size: 27rpx 22rpx;
}
.sorting_active text{
    color: #1bbcf0;
}
/*排序 end*/ 